<?xml version="1.0" encoding="UTF-8"?>
<!-- Springâ€™s namespaces are declared, and the default namespace is beans.
The beans namespace is used to declare the beans that need to be managed
by Spring -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="provider" class="spring.core.decoupled.HelloWorldMessageProvider"/>

    <bean id="renderer" class="spring.core.decoupled.StandardOutMessageRenderer"
          p:messageProvider-ref="provider"/>
</beans>